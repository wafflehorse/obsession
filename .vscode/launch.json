  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Platform Main",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build_debug/platform_main",  // Path to your compiled executable
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "MIMode": "lldb", // Or "gdb" if you are using gdb
      "preLaunchTask": "Build C++ Program",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
    },
    {
        "name": "Debug Windows LLDB-DAP",
        "type": "lldb-dap",
        "request": "launch",
        "program": "${workspaceFolder}\\build_debug\\platform_main.exe",
        "preLaunchTask": "Build C++ Windows Program",
    },
    {
      "name": "Debug Ase Parser",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/game_tools/asset_manager/pack",  // Path to your compiled executable
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "MIMode": "lldb", // Or "gdb" if you are using gdb
      "preLaunchTask": "Build Ase Parser",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
    }
  ]
}